%article.photos
  %section
    %ul.cols3
      == {% for album in site.categories.photos %}
      %li.one-third
        %a{ href: "{{ album.url }}" }
          %img{ src: "{{ album.thumbnail }}"}
          %span {{ album.title }}
        %nav
          %time {{ album.date | date: "%Y" }}
          == {% for tag in album.tags %}
          %span,
          %span {{ tag }}
          == {% endfor %}
      == {% endfor %}
