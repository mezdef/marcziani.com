layout: listing
permalink: photos/
== ---

%article.photos
  %section
    %ul.grid
      == {% for album in site.categories.photos %}
      %li
        %a{ href: "{{ album.url }}" }
          %picture
            %img.b-lazy{src:"", "data-src":"{{ album.thumbnail }}", alt:""}
          %span {{ album.title }}
        %nav
          %time {{ album.date | date: "%Y" }}
          == {% for tag in album.tags %}
          %span,
          %span {{ tag }}
          == {% endfor %}
      == {% endfor %}

  %script{src: "/assets/js/imageloader.min.js", type: "text/javascript"}
