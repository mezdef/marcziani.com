%html{lang: "en"}
  {% haml head.haml %}
  %body.post
    {% haml header.haml %}
    %main
      %article.projects
        %header
          %time
            %span
              {{ page.date | date: '%B' }}
            %span
              {{ page.date | date: '%Y' }}
          %h1
            %span {{ page.title }}
            == {% if page.projecturl != null %}
            %a{href:"{{ page.projecturl }}"}
              %span
            == {% endif %}
          %p
            == {% for tag in page.tags %}
            %span {{ tag }} &#x2F;
            == {% endfor %}
        %section
          {{ content | headline | figure | gallery | details }}

      {% haml footer.haml %}

  %script{src: "/assets/js/imageloader.min.js", type: "text/javascript"}
  %script{src: "/assets/js/gallery.min.js", type: "text/javascript"}
