%html{lang: "en"}
  {% haml head.haml %}
  %body.post
    {% haml header.haml %}
    %main
      %article.photos
        %header
          %time
            -# %span
              -# {{ page.date | date: '%d' }}
            %span
              {{ page.date | date: '%B' }}
            %span
              {{ page.date | date: '%Y' }}
          %h1
            %span {{ page.title }}
          %p {{ page.subtitle }}
        %section
          {{ content | stripem }}
          {% if page.photoset %}
          {% for photo in page.photos %}
          {% assign photo-num = forloop.index %}
          {% for story in page.stories %}
          {% if story.id == photo-num %}
          %p {{ story.para }}
          {% endif %}
          {% endfor %}
          %figure.wide
            %picture.pre
              %img.lzy{src:"data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==", "data-src": "{{ photo.urlFullSize }}", alt: "{{ photo.description }}" }
            %figcaption.exif
              %p
                %label F. Length
                {{ photo.focalLength }}
              %p
                %label S. Speed
                {{ photo.shutterSpeed }}s
              %p
                %label Aperture
                Æ’/{{ photo.aperture }}
              %p
                %label ISO
                {{ photo.iso }}
              %p
                %label Taken
                {{ photo.creationDate | date: "%b %Y" }}
            {% if photo.description != '' %}
            %figcaption.description
              {{ photo.description }}
            {% endif %}
          {% endfor %}
          {% endif %}


      {% haml footer.haml %}

    %script{src: "/assets/js/imageloader.min.js", type: "text/javascript"}
